{
  "name": "altfinder",
  "productName": "AltFinder",
  "description": "A modern, fast alternative to Finder",
  "author": "Jacob Cole",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.jacobcole.altfinder",
    "files": [
      "dist/index.html",
      "dist/assets/**/*",
      "dist/icon*.png",
      "dist/icon.svg",
      "dist-electron/**/*",
      "scripts/**/*"
    ],
    "asarUnpack": [
      "scripts/**/*"
    ],
    "mac": {
      "icon": "public/icon-512.png",
      "category": "public.app-category.utilities",
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Folder",
            "CFBundleTypeRole": "Viewer",
            "LSHandlerRank": "Alternate",
            "LSItemContentTypes": [
              "public.folder",
              "public.directory"
            ]
          }
        ]
      }
    }
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  }
}
